pipeline {
    agent any 
   paramters{
       choice(name:'VERSION',choices:['1.0','2.1','2.3'],description:'')
       booleanParam(name:'executeTests',defaultValue:true,description:'')
   }
    stages {
        stage("build"){
            steps{
            echo 'buils'
            }
        }
         stage("test"){
            when{
                expression{
                    params.executeTests
                }
            }
        }
         stage("dep"){
            steps{
            echo 'deploying the apk'
            echo "deploying version ${params.VERSION} "
            }
        }
    }

}